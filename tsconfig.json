{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "ES5",

		"jsx": "react",
		"jsxFactory": "m",
		"module": "CommonJS",
		"moduleResolution": "Node",

		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"sourceMap": false,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
	},
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
	"include": [
	  "src/**/*.ts",
	  "src/**/*.tsx",
	],
	"exclude": [
		"node_modules"
	]
}